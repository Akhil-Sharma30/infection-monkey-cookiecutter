{
    "project_name": "infection-monkey-template",
    "__project_slug": "{{ cookiecutter.project_name | lower | replace('-', '_') | replace('.', '_') }}",

    "full_name": "Your Name",
    "email": "you@gmail.com",
    "github_repo": "infection-monkey-template",

    "platform": [
        "github",
        "gitlab"
    ],
    
    "org": "guardicode",
    "github_url": "guardicode",
    "url": "https://{{ cookiecutter.platform }}.com/{{ cookiecutter.org }}/{{ cookiecutter.project_name }}",

    "__year": "{% now 'utc', '%Y' %}",
    "__date": "{% now 'utc', '%H:%M:%S' %}",
    "license": ["MIT","Apache","GPLv3"],
    
    "project_short_description": "Sample cookiecutter template for infection monkey.",
    "python_major_version": 3,
    "python_minor_version": 11,

    "hook_black": ["y", "n"],
    "hook_flake8": ["y", "n"],
    "hook_isort": ["y", "n"],
    "hook_mypy": ["y","n"],
    "hook_shellcheck": ["y","n"],
    "hook_vulture": ["y", "n"],

    "codecov": ["y","n"],
    
    "exclude_these_file_in_flake8": "vulture_allowlist.py",

    "hook_pytest": ["y","n"],
    "hook_poetry": ["y","n"],
    
    "black_version": "23.1.0",
    "flake8_version": "6.0.0",
    "isort_version": "5.12.0",
    "mypy_version": "1.0.1",
    "vulture_version": "2.7",

    "__prompts__": {
        "license": {
            "__prompt__": "Choose a license",
            "GPLv3": "GPLv3 (recommended for infection monkey projects)"
        },
        "hook_black": {
            "__prompt__": "Add black to .pre-commit-config",
            "y": "yes",
            "n": "no"
        },
        "hook_flake8": {
            "__prompt__": "Add flake8 to .pre-commit-config",
            "y": "yes",
            "n": "no"
        },
        "hook_isort": {
            "__prompt__": "Add isort to .pre-commit-config",
            "y": "yes",
            "n": "no"
        },
        "hook_mypy": {
            "__prompt__": "Add mypy to .pre-commit-config",
            "y": "yes",
            "n": "no"
        },
        "hook_poetry": {
            "__prompt__": "Add poetry to pyproject.toml",
            "y": "yes",
            "n": "no"
        },
        "hook_pytest":{
            "__prompt__": "Add pytest to pyproject.toml",
            "y": "yes",
            "n": "no"
        },
        "hook_shellcheck":{
            "__prompt__": "Add shellcheck to .pre-commit-config",
            "y": "yes",
            "n": "no"
        },
        "hook_vulture": {
            "__prompt__": "Add vulture to .pre-commit-config",
            "y": "yes",
            "n": "no"
        }
    }
}
